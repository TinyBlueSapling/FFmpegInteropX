<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>$id$</id>
    <version>$version$</version>
    <description>FFmpeg dlls for Windows 10 UWP Apps</description>
    <authors>FFmpegInteropX</authors>
    <projectUrl>https://github.com/ffmpeginteropx/FFmpegInteropX</projectUrl>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <license type="expression">LGPL-2.1-or-later AND Zlib AND MIT</license>
    <dependencies>
      <group targetFramework="uap10.0" />
    </dependencies>
    <repository type="git" url="$repositoryUrl$" commit="$repositoryCommit$" />
  </metadata>
  <files>

    <file src="..\Output\FFmpegUWP\x64\licenses\*.*"            target="licenses" />
    
    <file src="..\Output\FFmpegUWP\x64\include\**\*.h"          target="include" />

    <file src="..\Output\FFmpegUWP\x86\lib\*.pdb"               target="runtimes\win10-x86\native" />
    <file src="..\Output\FFmpegUWP\x86\lib\*.lib"               target="runtimes\win10-x86\native" />

    <file src="..\Output\FFmpegUWP\x64\lib\*.pdb"               target="runtimes\win10-x64\native" />
    <file src="..\Output\FFmpegUWP\x64\lib\*.lib"               target="runtimes\win10-x64\native" />

    <file src="..\Output\FFmpegUWP\ARM\lib\*.pdb"               target="runtimes\win10-arm\native" />
    <file src="..\Output\FFmpegUWP\ARM\lib\*.lib"               target="runtimes\win10-arm\native" />

    <file src="..\Output\FFmpegUWP\ARM64\lib\*.pdb"             target="runtimes\win10-arm64\native" />
    <file src="..\Output\FFmpegUWP\ARM64\lib\*.lib"             target="runtimes\win10-arm64\native" />

    <file src="FFmpegInteropX.FFmpegUWP.targets"             target="build\native"/>

  </files>
</package>